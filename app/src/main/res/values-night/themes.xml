<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UniVerse" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/highlight</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/highlight</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorControlActivated">@color/secondary</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Change the outline color when in focused state -->
        <item name="boxStrokeColor">@color/secondary</item>
        <!-- Change the hint text color when in focused state -->
        <item name="hintTextColor">@color/secondary</item>
    </style>

    <style name="Button" parent="@style/Widget.Material3.Button.UnelevatedButton">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="lineHeight">@dimen/new_button_line_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/button_padding</item>
        <item name="android:paddingBottom">@dimen/button_padding</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Button.Black" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="Button.White" parent="Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="Button.Active" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/secondary</item>
    </style>

    <style name="Button.Inactive" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="Button.Secondary" parent="Button">
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">@dimen/button_line_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">@dimen/elevation_small</item>
    </style>
</resources>